    "components": {
      "schemas": {
        "ErrorResponse": {
          "type": "object",
          "properties": {
            "httpStatus": {
              "type": "integer",
              "format": "int32"
            },
            "exception": {
              "type": "string"
            },
            "message": {
              "type": "string"
            },
            "fieldErrors": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/FieldError"
              }
            }
          }
        },
        "FieldError": {
          "type": "object",
          "properties": {
            "field": {
              "type": "string"
            },
            "errorCode": {
              "type": "string"
            },
            "message": {
              "type": "string"
            }
          }
        },
        "InvoiceDTO": {
          "required": [
            "invoiceItemList"
          ],
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "billerStreetAddress": {
              "type": "string"
            },
            "billerCity": {
              "type": "string"
            },
            "billerZipCode": {
              "type": "integer",
              "format": "int32"
            },
            "billerCountry": {
              "type": "string"
            },
            "clientName": {
              "type": "string"
            },
            "clientStreetAddress": {
              "type": "string"
            },
            "clientEmail": {
              "type": "string"
            },
            "clientCity": {
              "type": "string"
            },
            "clientZipCode": {
              "type": "integer",
              "format": "int32"
            },
            "clientCountry": {
              "type": "string"
            },
            "invoiceDate": {
              "type": "string",
              "format": "date-time"
            },
            "paymentTerms": {
              "type": "integer",
              "format": "int32"
            },
            "paymentDueDate": {
              "type": "string",
              "format": "date-time"
            },
            "productDesc": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "invoiceItemList": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/InvoiceItemDTO"
              }
            }
          }
        },
        "InvoiceItemDTO": {
          "required": [
            "id",
            "itemName",
            "price",
            "qty"
          ],
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "itemName": {
              "type": "string"
            },
            "qty": {
              "type": "integer",
              "format": "int32"
            },
            "price": {
              "type": "number"
            }
          }
        }
      }
